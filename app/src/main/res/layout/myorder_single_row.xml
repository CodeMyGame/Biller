<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    android:elevation="20dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewID"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_back"
            android:gravity="center"
            android:text="T"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCustomerName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/TextViewID"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/TextViewID"
            android:text="Washing"
            android:textColor="#0b3353"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewInvoiceno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewCustomerName"
            android:layout_alignStart="@+id/textViewCustomerName"
            android:layout_below="@+id/textViewCustomerName"
            android:text="Invoice no"
            android:layout_marginTop="3dp"
            android:textColor="#0e3c6b"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹"
            android:textColor="#0c3e66"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/textViewCost"
            android:textStyle="bold"
            android:layout_alignTop="@+id/textViewInvoiceno"
            android:id="@+id/textView2" />
        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="500"
            android:textStyle="bold"
            android:textColor="#0c3e66"
            android:textSize="20dp"
            android:layout_alignTop="@+id/textViewInvoiceno"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textViewOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ord"
            android:textColor="#6c0606"
            android:textStyle="bold"
            android:layout_alignTop="@+id/textViewCustomerName"
            android:layout_alignRight="@+id/textViewCost"
            android:layout_alignEnd="@+id/textViewCost" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_check"
            android:id="@+id/status"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCustomerName"
            android:layout_toRightOf="@+id/textViewInvoiceno"
            android:layout_toEndOf="@+id/textViewInvoiceno" />

        <TextView
            android:id="@+id/textViewCustomerMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="#123"
            android:layout_alignLeft="@+id/textViewInvoiceno"
            android:layout_alignStart="@+id/textViewInvoiceno"
            android:layout_below="@+id/textViewInvoiceno"
            android:text="9690148808" />
    </RelativeLayout>
</android.support.v7.widget.CardView>